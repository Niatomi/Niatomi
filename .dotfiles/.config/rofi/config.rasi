configuration {

    font: "Meslo LG S for Powerline 15";
    show-icons: false;
    disable-history: false;
    sort: true;
    sorting-method: "normal";
    case-sensitive: false;
    cycle: true;
    sidebar-mode: false;

    timeout {
	action: "kb-cancel";
	delay:  0;
    }

    filebrowser {
	directories-first: true;
	sorting-method:    "name";
    }

}
